---

generic:
  role_description: |
    Role to make package management easier.
    Supports dnf, yum, apt apk and pip

platforms:
  almalinux9:
    ci: false
    supported: true
  alpine3:
    ci: true
    supported: true

ci_templates:
  converge.yml:
    force: false

molecule:
  prepare:
    vars:
      activate_epel: true
  converge:
    roles:
      - python
  requirements:
    roles_extra:
      - python
