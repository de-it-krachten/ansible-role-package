---

# Generic
role: ansible-role-package
role_short: package
role_description: |
  Role to make package management easier.
  Supports rpm (dnf/yum) and deb (apt)
 

# Supported platform
platforms:
  - name: CentOS 7
    image: centos7
  - name: CentOS 8
    image: centos8
  - name: Debian 10 (Buster)
    image: debian10
  - name: Debian 11 (Bullseye)
    image: debian11
  - name: Ubuntu 18.04 LTS
    image: ubuntu1804
  - name: Ubuntu 20.04 LTS
    image: ubuntu2014

# Ansible galaxy
galaxy:
  role_name: package
  namespace: de_it_krachten
  description: package
  author: Mark van Huijstee
  company: De IT Krachten BV
  license: MIT
  min_ansible_version: 2.9
  platforms:
    - name: EL
      versions:
        - 7
        - 8
    - name: Debian
      versions:
        - buster
        - bullseye
    - name: Ubuntu
      versions:
        - 18.04
        - 20.04

# Github
github:
  active: true
  self_hosted: false
  fail_fast: false
  owner: de-it-krachten
  repo: ansible-role-package

# Gitlab
gitlab:
  active: false

# molecule
molecule:
  active: true
  platforms:
    - centos7
    - centos8
    - debian10
    - debian11
    - ubuntu1804
    - ubuntu2004
  converge:
    playbooks: []
    vars: {}
  prepare:
    playbooks: []
    vars: {}

# templates
ci_templates:
  - src:  galaxy/templates/meta-main.yml
    dest: meta/main.yml
  - src:  yamllint/templates/yamllint
    dest: .yamllint
  - src:  github/templates/ci.yml
    dest: .github/workflows/ci.yml
    when: github_runner_cloud
  - src:  github/templates/ci-self-hosted.yml
    dest: .github/workflows/ci.yml
    when: github_runner_self_hosted
  - src:  gitlab/templates/gitlab-ci.yml
    dest: .gitlab-ci.yml
    when: gitlab_active
  - src:  molecule/templates/prepare.yml
    dest: molecule/default/prepare.yml
    when: molecule_active
  - src:  molecule/templates/molecule.yml
    dest: molecule/default/molecule.yml
    when: molecule_active
  - src:  molecule/templates/converge.yml
    dest: molecule/default/converge.yml
    when: molecule_active
    force: false
#  - src:  molecule/templates/requirements.tmpl
#    dest: molecule/default/requirements.tmpl
#    when: molecule_active
  - src:  git/templates/gitignore
    dest: .gitignore
    force: false
